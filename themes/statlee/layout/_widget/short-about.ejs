<!-- Short About -->
<section class="visible-md visible-lg">
    <h5><a href="<%= config.root %>about/">ABOUT ME</a></h5>
    <div class="short-about">

        <% if(config['sidebar-avatar']) { %>
            <img src="<%= config['sidebar-avatar'] %>"/>
        <% } %>
           

        <% if(config['sidebar-about-description']) { %>
            <p><%= config['sidebar-about-description'] %></p>
        <% }%>

        <!-- SNS Link -->
        <ul class="list-inline">
            <% if (config.RSS) { %>
                <li>
                    <a target="_blank" href="<%= config.root + 'atom.xml' %>">
                        <span class="fa-stack fa-lg">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <i class="fa fa-rss fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                </li>
            <% } %>
            
            <% if (config.zhihu_username) { %>
                <li>
                    <a target="_blank" href="https://www.zhihu.com/people/<%= config.zhihu_username %>">
                        <span class="fa-stack fa-lg">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <i class="fa  fa-stack-1x fa-inverse">çŸ¥</i>
                        </span>
                    </a>
                </li>
            <% } %>

            <% if (config.github_username) { %>
                <li>
                    <a target="_blank"  href="https://github.com/<%= config.github_username %>">
                        <span class="fa-stack fa-lg">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <i class="fa fa-github fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                </li>
            <% } %>
            <% if (config.csdn_username) { %>
                <li>
                    <a target="_blank"  href="https://blog.csdn.net/<%= config.csdn_username %>">
                        <span class="fa-stack fa-lg">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <i class="fa fa-csdn fa-stack-1x fa-inverse">C</i>
                        </span>
                    </a>
                </li>
            <% } %>
            
            <% if (config.youtube_channel) { %>
                <li>
                    <a target="_blank" href="https://youtube.com/<%= config.youtube_channel %>">
                        <span class="fa-stack fa-lg">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <i class="fa fa-youtube fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                </li>
            <% } %>
      
                 
            